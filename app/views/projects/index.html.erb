<% @projects.each do |project| %>
  <% @current_properties = @project_properties.pop %>
  <tr>
    <td><%= @current_properties['name'] %></td>
    <td><%= link_to 'Translations', project_translations_path(project) %></td>
    <td><%= link_to 'Edit', edit_project_path(project) %></td>
    <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

