<h1>Listing projects</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Default language</th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @projects.each do |project| %>
  <tr>
    <td><%= project.name %></td>
    <% if project.default_language then %>
    <td><%= t('languages.' + project.default_language) %></td>
    <% end %>
    <td><%= link_to 'Translations', project_translations_path(project) %></td>
    <td><%= link_to 'Show', project %></td>
    <td><%= link_to 'Edit', edit_project_path(project) %></td>
    <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

